<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:HTMLPanel>
    <div class="FBGWTField">
      <g:Button ui:field="getAuthResponseButton">Get Auth Response</g:Button>
    </div>


    <div class="FBGWTField">
      <g:Button ui:field="checkStatusButton">Check Status</g:Button>
      <g:CheckBox ui:field="checkStatusForceReloadCheckbox">Force reload</g:CheckBox>
    </div>

    <sc:FBLoginOptionsEditor ui:field="loginOptionsEditor"/>

    <g:Button ui:field="loginButton">Login</g:Button>
    <g:Button ui:field="logoutButton">Logout</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>