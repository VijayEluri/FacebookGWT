<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:HTMLPanel>
    <div class="FBGWTField">
      <g:Button ui:field="getSessionButton" enabled="false">Get Session</g:Button>
      <sc:FBObjectDisplay ui:field="sessionDisplay" label="Session" visible="false"/>
    </div>


    <div class="FBGWTField">
      <g:Button ui:field="checkStatusButton" enabled="false">Check Status</g:Button>
      <g:CheckBox ui:field="checkStatusForceReloadCheckbox" enabled="false">Force reload</g:CheckBox>
      <sc:FBObjectDisplay ui:field="statusDisplay" label="Status" visible="false"/>
    </div>

    <sc:FBLoginOptionsEditor ui:field="loginOptionsEditor" enabled="false"/>

    <g:Button ui:field="loginButton" enabled="false">Login</g:Button>
    <g:Button ui:field="logoutButton" enabled="false">Logout</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>