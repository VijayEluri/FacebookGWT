<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:HTMLPanel>
    <div class="FBGWTField">
      <g:Button ui:field="retrieveCurrentUserButton" enabled="false">Get Current User</g:Button>
      <sc:FBObjectDisplay ui:field="retrieveCurrentUserDisplay" label="Current User" visible="false"/>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="retrieveCurrentUserHomeFeedButton" enabled="false">Get Current User's Home Feed</g:Button>
      <sc:FBObjectDisplay ui:field="retrieveCurrentUserHomeFeedDisplay" label="Current User's Home Feed" visible="false"/>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="postToCurrentUserWallButton" enabled="false">Post to Current User's Home Feed</g:Button>
      <g:TextBox ui:field="postToCurrentUserWallMessageTextBox" enabled="false"/>
      <sc:FBObjectDisplay ui:field="postToCurrentUserWallDisplay" label="Post to Current User's Wall" visible="false"/>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="deletePostButton" enabled="false">Delete a Post</g:Button>
      <g:TextBox ui:field="deletePostIDTextBox" enabled="false"/>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="likeItemButton" enabled="false">Like an item</g:Button>
      <g:TextBox ui:field="likeItemIDTextBox" enabled="false"/>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="unlikeItemButton" enabled="false">Unlike an item</g:Button>
      <g:TextBox ui:field="unlikeItemIDTextBox" enabled="false"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>