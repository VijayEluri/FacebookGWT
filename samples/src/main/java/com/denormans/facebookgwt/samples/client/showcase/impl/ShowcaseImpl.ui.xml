<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:fb="urn:import:com.denormans.facebookgwt.api.client.ui">
  <g:DockLayoutPanel>
    <g:north size="32">
      <g:HTML styleName="FBGWTHeader">Showcase</g:HTML>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:HTMLPanel styleName="FBGWTMainContent">
            <div ui:field="initializationSection">
              <h3>Initialization</h3>
              <g:Button ui:field="initButton">Init</g:Button>
<!--
              <g:DisclosurePanel>
                <g:header>Options</g:header>
                <g:FlowPanel></g:FlowPanel>
              </g:DisclosurePanel>
-->
            </div>
            <div ui:field="eventHandlersSection">
              <h3>Event Handlers</h3>
              <g:Button ui:field="resetEventHandlersButton" enabled="false">Reset</g:Button>
              <g:Button ui:field="removeEventHandlersButton" enabled="false">Remove</g:Button>
            </div>
            <div ui:field="authenticationSection">
              <h3>Authentication</h3>
              <g:Button ui:field="loginButton" enabled="false">Login</g:Button>
              <g:Button ui:field="logoutButton" enabled="false">Logout</g:Button>
            </div>
            <div ui:field="widgetsSection">
              <h3>Widgets</h3>
              <g:Button ui:field="parseXFBMLButton" enabled="false">Parse XFBML</g:Button>
              <fb:Like ui:field="fbLike" href="http://denormans.github.com/FacebookGWT/Samples"/>
            </div>
          </g:HTMLPanel>
        </g:center>
        <g:south size="150">
          <g:ScrollPanel ui:field="eventContainer" styleName="FBGWTEventContainer">
            <g:FlowPanel ui:field="eventPanel"></g:FlowPanel>
          </g:ScrollPanel>
        </g:south>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>