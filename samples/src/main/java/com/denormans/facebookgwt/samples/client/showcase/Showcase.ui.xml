<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:DockLayoutPanel>
    <g:north size="32">
      <g:HTMLPanel styleName="FBGWTHeader">
        <div class="FBGWTShowcaseCodeLink">
          <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/Showcase.java" target="FacebookGWTShowcaseSource">Source</a>
        </div>

        <a href="http://denormans.github.com/FacebookGWT/">FacebookGWT</a> - Showcase
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:TabLayoutPanel barHeight="32">
            <g:tab>
              <g:header>Initialization</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/InitializationWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Initialize</span>
                    </div>
                    <sc:InitializationWidget ui:field="initWidget" styleName="FBGWTContent"/>
                  </div>

                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/EventsWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Events</span>
                    </div>
                    <sc:EventsWidget ui:field="eventsWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>

              </g:ScrollPanel>
            </g:tab>
            <g:tab>
              <g:header>Authentication</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/AuthenticationWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Authentication</span>
                    </div>
                    <sc:AuthenticationWidget ui:field="authWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>
              </g:ScrollPanel>
            </g:tab>
            <g:tab>
              <g:header>Widgets</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/FBWidgetsWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Facebook Social Widgets</span>
                    </div>
                    <sc:FBWidgetsWidget ui:field="fbWidgetsWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>
              </g:ScrollPanel>
            </g:tab>
          </g:TabLayoutPanel>
        </g:center>
        <g:south size="150">
          <g:ScrollPanel ui:field="eventContainer" styleName="FBGWTEventContainer">
            <g:FlowPanel ui:field="eventPanel"/>
          </g:ScrollPanel>
        </g:south>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>