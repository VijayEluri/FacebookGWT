<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:DockLayoutPanel>
    <g:north size="32">
      <g:HTMLPanel styleName="FBGWTHeader">
        <div class="FBGWTShowcaseCodeLink">
          <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/Showcase.java" target="FacebookGWTShowcaseSource">Source</a>
        </div>

        <a href="http://denormans.github.com/FacebookGWT/">FacebookGWT</a> - Showcase
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:TabLayoutPanel barHeight="32">
            <g:tab>
              <g:header>Initialization</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/InitializationWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Initialize</span>
                    </div>
                    <sc:InitializationWidget ui:field="initWidget" styleName="FBGWTContent"/>
                  </div>

                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/EventsWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Events</span>
                    </div>
                    <sc:EventsWidget ui:field="eventsWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>

              </g:ScrollPanel>
            </g:tab>

            <g:tab>
              <g:header>Authentication</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/AuthenticationWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Authentication</span>
                    </div>
                    <sc:AuthenticationWidget ui:field="authWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>
              </g:ScrollPanel>
            </g:tab>

            <g:tab>
              <g:header>UI</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/UIMethodsWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>UI Methods</span>
                    </div>
                    <sc:UIMethodsWidget ui:field="uiMethodsWidget" styleName="FBGWTContent"/>
                  </div>

                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/CanvasWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Canvas</span>
                    </div>
                    <sc:CanvasWidget ui:field="canvasWidget" styleName="FBGWTContent"/>
                  </div>

                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/SocialWidgetsWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Social Widgets</span>
                    </div>
                    <sc:SocialWidgetsWidget ui:field="socialWidgetsWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>
              </g:ScrollPanel>
            </g:tab>

            <g:tab>
              <g:header>Graph</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/GraphWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Graph API</span>
                    </div>
                    <sc:GraphWidget ui:field="graphWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>
              </g:ScrollPanel>
            </g:tab>

            <g:tab>
              <g:header>Legacy</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">
                      <div class="FBGWTShowcaseCodeLink">
                        <a href="https://github.com/denormans/FacebookGWT/blob/master/samples/src/main/java/com/denormans/facebookgwt/samples/client/showcase/widgets/LegacyWidget.java" target="FacebookGWTShowcaseSource">Source</a>
                      </div>
                      <span>Legacy API</span>
                    </div>
                    <sc:LegacyWidget ui:field="legacyWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>
              </g:ScrollPanel>
            </g:tab>
          </g:TabLayoutPanel>
        </g:center>
        <g:east size="300" styleName="FBGWTItemDisplayContainer">
          <g:ScrollPanel ui:field="itemDisplayContainer">
            <sc:FBObjectDisplay ui:field="itemDisplay" label="Item Display"/>
          </g:ScrollPanel>
        </g:east>
        <g:south size="150">
          <g:ScrollPanel ui:field="eventContainer" styleName="FBGWTEventContainer">
            <g:FlowPanel ui:field="eventPanel"/>
          </g:ScrollPanel>
        </g:south>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>