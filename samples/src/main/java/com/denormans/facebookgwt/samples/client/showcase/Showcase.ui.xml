<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:fb="urn:import:com.denormans.facebookgwt.api.client.ui.widgets"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:DockLayoutPanel>
    <g:north size="32">
      <g:HTMLPanel styleName="FBGWTHeader">
        <a href="http://denormans.github.com/FacebookGWT/">FacebookGWT</a> - Showcase
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:TabLayoutPanel barHeight="32">
            <g:tab>
              <g:header>Initialization</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">Initialize</div>
                    <sc:InitializationWidget ui:field="initWidget" styleName="FBGWTContent"/>
                  </div>


                  <div class="FBGWTSection">
                    <div class="FBGWTHeader">Events</div>
                    <sc:EventsWidget ui:field="eventsWidget" styleName="FBGWTContent"/>
                  </div>
                </g:HTMLPanel>

              </g:ScrollPanel>
            </g:tab>
            <g:tab>
              <g:header>Authentication</g:header>

              <g:ScrollPanel>
                <g:HTMLPanel>
                  <g:Button ui:field="loginButton" enabled="false">Login</g:Button>
                  <g:Button ui:field="logoutButton" enabled="false">Logout</g:Button>
                </g:HTMLPanel>

              </g:ScrollPanel>
            </g:tab>
            <g:tab>
              <g:header>Widgets</g:header>

              <g:ScrollPanel ui:field="widgets">
                <g:HTMLPanel>
                  <div>
                    <g:Button ui:field="parseXFBMLButton" enabled="false">Parse XFBML</g:Button>
                    <g:Button ui:field="streamPublishButton" enabled="false">Publish to Stream</g:Button>
                  </div>
                  <fb:Like ui:field="fbLike" href="http://denormans.github.com/FacebookGWT/Samples"/>
                </g:HTMLPanel>

              </g:ScrollPanel>
            </g:tab>
          </g:TabLayoutPanel>
        </g:center>
        <g:south size="150">
          <g:ScrollPanel ui:field="eventContainer" styleName="FBGWTEventContainer">
            <g:FlowPanel ui:field="eventPanel"></g:FlowPanel>
          </g:ScrollPanel>
        </g:south>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>