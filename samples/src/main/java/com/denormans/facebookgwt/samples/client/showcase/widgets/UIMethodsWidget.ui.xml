<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <g:HTMLPanel>
    <div class="FBGWTField">
      <g:Button ui:field="bookmarkButton">Bookmark Application</g:Button>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="streamPublishButton">Publish to Stream</g:Button>
      <g:TextBox ui:field="streamPublishMessageTextBox">Learning about FacebookGWT</g:TextBox>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="streamShareButton">Share Link to Stream</g:Button>
      <g:TextBox ui:field="streamShareLinkTextBox">http://denormans.github.com/FacebookGWT</g:TextBox>
    </div>

    <div class="FBGWTField">
      <g:Button ui:field="friendAddButton">Add Friend</g:Button>
      <g:TextBox ui:field="friendAddIDTextBox"/>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>