<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:fb="urn:import:com.denormans.facebookgwt.api.client.ui.widgets"
             xmlns:sc="urn:import:com.denormans.facebookgwt.samples.client.showcase.widgets">
  <g:DockLayoutPanel>
    <g:north size="32">
      <g:HTMLPanel>
        <div class="FBGWTHeader"><a href="http://denormans.github.com/FacebookGWT/">FacebookGWT</a> - Showcase</div>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:TabLayoutPanel barHeight="32">
            <g:tab>
              <g:header>Initialization</g:header>

              <sc:InitializationWidget ui:field="initWidget"/>
            </g:tab>
            <g:tab>
              <g:header>Event Handlers</g:header>

              <g:HTMLPanel>
                <g:Button ui:field="resetEventHandlersButton" enabled="false">Reset</g:Button>
                <g:Button ui:field="removeEventHandlersButton" enabled="false">Remove</g:Button>
              </g:HTMLPanel>
            </g:tab>
            <g:tab>
              <g:header>Authentication</g:header>

              <g:HTMLPanel>
                <g:Button ui:field="loginButton" enabled="false">Login</g:Button>
                <g:Button ui:field="logoutButton" enabled="false">Logout</g:Button>
              </g:HTMLPanel>
            </g:tab>
            <g:tab>
              <g:header>Widgets</g:header>

              <g:HTMLPanel ui:field="widgets">
                <div>
                  <g:Button ui:field="parseXFBMLButton" enabled="false">Parse XFBML</g:Button>
                  <g:Button ui:field="streamPublishButton" enabled="false">Publish to Stream</g:Button>
                </div>
                <fb:Like ui:field="fbLike" href="http://denormans.github.com/FacebookGWT/Samples"/>
              </g:HTMLPanel>
            </g:tab>
          </g:TabLayoutPanel>
        </g:center>
        <g:south size="150">
          <g:ScrollPanel ui:field="eventContainer" styleName="FBGWTEventContainer">
            <g:FlowPanel ui:field="eventPanel"></g:FlowPanel>
          </g:ScrollPanel>
        </g:south>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>